package ProblemStatements.ATM;

import java.util.Scanner;

public class ATM extends BankAccount{

	public ATM(String name, double openingBalance) {
		super(name, openingBalance);
	}
	
	public ATM() {}

	public static void main(String[] args) {
		
		//Get the user name
		ATM  user = new ATM();
		String userNameString =  user.getUserName();
		
		
		ATM account = new ATM(userNameString, 100000.00);
		
		int ATMoption;
		
		//Display Menu
		do {
			Scanner scanner = new Scanner(System.in);
			System.out.println("--- Select ATM Menu ---");
			System.out.println("1. Check Balance");
			System.out.println("2. Deposit Money");
			System.out.println("3. Withdraw Money");
			System.out.println("4. Exit");
			ATMoption = scanner.nextInt();
			
			if (ATMoption == 1) {
				System.out.println(account.getBalance());
			} else if (ATMoption == 2){
				System.out.println("Enter the Deposit Amount");
				double depositeAmount = scanner.nextDouble();
				account.deposit(depositeAmount);
				System.out.println("Amount Demposited");
				System.out.println("Balance: " + account.getBalance());
			} else if (ATMoption == 3) {
				System.out.println("Enter the Withdrawal Amount");
				double withDrawalAmount = scanner.nextDouble();
				account.deposit(withDrawalAmount);
				System.out.println("Amount Withdrawn");
				System.out.println("Balance: " + account.getBalance());
			}else if (ATMoption == 4) {
				continue;
			}else {
				System.out.println("Enter valid Menu number");
			}
			
//			switch (ATMoption) {
//			case 1:
//				account.getBalance();
//				continue;
//			case 2:
//				System.out.println("Enter the Deposit Amount");
//				double depositeAmount = scanner.nextDouble();
//				account.deposit(depositeAmount);
//				continue;
//			case 3:
//				System.out.println("Enter the Withdrawal Amount");
//				double withDrawalAmount = scanner.nextDouble();
//				account.deposit(withDrawalAmount);
//				break;
//			case 4:
//				break;
//
//			default:
//				System.out.println("Enter valid Menu number");
//			}
			
		} while (ATMoption != 4);
		
		System.out.println(" Thanks for using the ATM");
		

	}

}
